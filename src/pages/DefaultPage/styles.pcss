.component {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.title {
  color: $blue;
  text-align: center;
  font-size: 3em;
}

.description {
  margin-top: 10px;
  text-align: center;
  font-size: 2em;
}

.link {
  color: $black;
  text-decoration: underline;
}
